// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// MODÈLES
// ============================================================================

model Service {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  features    String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model License {
  id         Int      @id @default(autoincrement())
  type       String  // "personnel" | "professionnel" | "entreprise"
  duration   String  // "1_mois" | "1_an" | "perpetuel"
  users      Int
  support    Boolean
  software   Software @relation(fields: [softwareId], references: [id], onDelete: Cascade)
  softwareId Int
}

model Software {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  price           Int       // Prix en FCFA
  priceFormatted  String
  category        String
  icon            String
  description     String
  image           String?
  stock           Int
  rating          Float
  reviews         Int
  features        String[]
  system          String
  publisher       String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  licenses License[]
}

model CartItem {
  id         Int      @id @default(autoincrement())
  nom        String
  prix       Int
  image      String?
  quantite   Int      @default(1)
  userId     Int?     // Optionnel pour les utilisateurs connectés
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

